@page
@model PortfolioWeb.Areas.Admin.Pages.Projects.DetailsModel
@{
    ViewData["Title"] = "Project Details";
}

<h1>Project Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Project.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.Title)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Project.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.Description)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Project.Technologies)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.Technologies)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Project.GitHubUrl)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Project.GitHubUrl))
            {
                <a href="@Model.Project.GitHubUrl" target="_blank">@Model.Project.GitHubUrl</a>
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Project.LiveDemoUrl)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Project.LiveDemoUrl))
            {
                <a href="@Model.Project.LiveDemoUrl" target="_blank">@Model.Project.LiveDemoUrl</a>
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Project.IsFeatured)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.IsFeatured)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Project.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.CreatedDate)
        </dd>

        <dt class="col-sm-2">
            Project Image
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Project.ImagePath))
            {
                <img src="@Model.Project.ImagePath" alt="Project image" class="img-thumbnail" style="max-height: 200px;" />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Project.Id" class="btn btn-primary">Edit</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>